<loginScreen>
    username: username
    password: password
    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2
            Label:
                text: 'Username: '

            TextInput:
                id: username
                multiline: False
            
            Label:
                text:'Password: '
            TextInput:
                id: password
                multiline: False
            
        Button:
            text: 'Submit'
            on_press: root.submitBtn()

